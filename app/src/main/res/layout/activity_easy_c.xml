<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.cquiz.EasyC"
    android:background="@drawable/main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txtQno"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:id="@+id/txtQno"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10:00"
            android:textColor="#FFFFFF"
            android:id="@+id/txttimer"
            android:layout_gravity="right" />

        <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/scrollView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtQues"
            android:id="@+id/txtQues"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="@drawable/back" />
    </ScrollView>
        <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:id="@+id/scrollView">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.58"
            android:layout_marginBottom="50dp"
            android:id="@+id/radio_group"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad1"
                android:id="@+id/radioAns1"
                android:layout_marginTop="25dp"
                android:padding="5dp"
                android:background="@drawable/back" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad2"
                android:id="@+id/radioAns2"
                android:padding="5dp"
                android:background="@drawable/back" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad3"
                android:id="@+id/radioAns3"
                android:padding="5dp"
                android:background="@drawable/back" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad4"
                android:id="@+id/radioAns4"
                android:padding="5dp"
                android:background="@drawable/back" />

        </RadioGroup>

</ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/btnsbm"
            android:id="@+id/button4"
            android:layout_marginRight="13dp"
            android:onClick="onsubmitbuttonclick"
            android:background="@drawable/mybutton"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/btnNext"
            android:id="@+id/button5"
            android:layout_marginLeft="15dp"
            android:onClick="onbuttonclick"
            android:background="@drawable/mybutton"
            />
    </LinearLayout>


    </LinearLayout>
</ScrollView>
